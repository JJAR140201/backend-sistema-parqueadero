# Database Configuration
# Para SQLite (local development)
DB_TYPE=sqlite

# Para PostgreSQL (producci√≥n - Railway, Heroku, etc)
# DATABASE_URL=postgresql://user:password@host:port/database
# O simplemente descomentar en .env local

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=24h

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_password
SMTP_FROM=noreply@parqueadero.com

# Tariff Configuration (in currency units per hour)
HOURLY_RATE=5000
DAILY_RATE=30000
MONTHLY_RATE=300000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://tu-frontend.vercel.app
